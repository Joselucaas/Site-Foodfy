{% extends "main.njk" %}

{% block links %}
    <a href="about">Sobre</a>
    <a href="revenue"><b>Receitas</b></a>
{% endblock %}

{% block content %}
    <div class="content">

    <div class="cards" id="revenue">

        {% for item in items %}
            <div class="card" id= "{{item.id}}">
                <img src="{{item.image}}" alt="{{item.title}}" id= "{{item.id}}">
                <div class="name">
                <h1>{{item.title}}</h1>
            </div>
                <div class="autor">
                    <p>por {{item.author}}</p>
                </div>
            </div>
        {% endfor %}
                
    </div>

{% endblock %}
     
{% block script %}
    <script src="/script.js"></script>
{% endblock %}
